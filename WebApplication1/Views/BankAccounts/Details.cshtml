
@{
    ViewData["Title"] = "Detalii cont bancar";
}

<div class="max-w-3xl mx-auto mt-10 px-6 py-8 bg-white shadow-md rounded-lg">
    <h1 class="text-3xl font-bold text-gray-800 mb-8 border-b pb-2">Detalii cont bancar</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-x-10 gap-y-4 text-sm text-gray-700 mb-6">
        <div><span class="font-semibold">IBAN:</span> @Model.Account.IBAN</div>
        <div><span class="font-semibold">Client:</span> @Model.Account.Customer.FullName</div>


    </div>

    <div class="mt-8">
        <a asp-action="Index" asp-route-customerId="@Model.Account.CustomerId" class="text-blue-600 hover:underline">
            ← Înapoi la listă
        </a>
    </div>
</div>