@model WebApplication1.Entities.BankAccount

@{
    ViewData["Title"] = "Editează Cont Bancar";
}

<h1>Editează Cont Bancar</h1>

<hr />
<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="CustomerId" />

    <div class="form-group">
        <label asp-for="IBAN" class="control-label"></label>
        <input asp-for="IBAN" class="form-control" readonly />
        <span asp-validation-for="IBAN" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Balance" class="control-label"></label>
        <input asp-for="Balance" class="form-control" />
        <span asp-validation-for="Balance" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Currency" class="control-label"></label>
        <input asp-for="Currency" class="form-control" />
        <span asp-validation-for="Currency" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <input type="submit" value="Salvează" class="btn btn-primary" />
        <a asp-action="Index" asp-route-customerId="@Model.CustomerId" class="btn btn-secondary">Renunță</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
