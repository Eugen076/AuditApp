@model WebApplication1.Entities.BankAccount

@{
    ViewData["Title"] = "Editează Cont Bancar";
}

<div class="max-w-2xl mx-auto py-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Editează Cont Bancar</h1>

    <form asp-action="Edit" class="space-y-6 bg-white p-6 rounded shadow">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="CustomerId" />

        <!-- IBAN (readonly) -->
        <div>
            <label asp-for="IBAN" class="block text-sm font-medium text-gray-700 mb-1">IBAN</label>
            <input asp-for="IBAN" readonly class="w-full border border-gray-300 bg-gray-100 rounded px-3 py-2 cursor-not-allowed" />
            <span asp-validation-for="IBAN" class="text-red-500 text-sm"></span>
        </div>

@*         <!-- Balance -->
       <div>
            <label asp-for="Balance" class="block text-sm font-medium text-gray-700 mb-1">Balance</label>
            <input asp-for="Balance" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Balance" class="text-red-500 text-sm"></span>
        </div> 

        <!-- Currency -->
       <div>
            <label asp-for="Currency" class="block text-sm font-medium text-gray-700 mb-1">Currency</label>
            <input asp-for="Currency" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Currency" class="text-red-500 text-sm"></span>
        </div>  *@

        <!-- Status (IsActive) -->
        <div>
            <label asp-for="IsActive" class="block text-sm font-medium text-gray-700 mb-1">Status</label>
            <select asp-for="IsActive" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500">
                <option value="true">Activeaza cont</option>
                <option value="false">Blocheaza cont</option>
            </select>
            <span asp-validation-for="IsActive" class="text-red-500 text-sm"></span>
        </div>

        <!-- Buttons -->
        <div class="flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow">
                Salvează
            </button>
            <a asp-action="Index" asp-route-customerId="@Model.CustomerId" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded shadow">
                Renunță
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
