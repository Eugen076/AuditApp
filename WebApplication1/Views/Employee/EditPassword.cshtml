@model WebApplication1.Models.ResetPasswordViewModel

@if (TempData["ErrorMessage"] != null)
{
    <div class="bg-red-100 text-red-700 px-4 py-3 rounded mb-4">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["SuccessMessage"] != null)
{
    <div class="bg-green-100 text-green-700 px-4 py-3 rounded mb-4">
        @TempData["SuccessMessage"]
    </div>
}

<div class="max-w-md mx-auto py-10">
    <h2 class="text-2xl font-bold text-gray-800 mb-6">Resetare parolă angajat</h2>

    <form asp-action="EditPassword" method="post" class="space-y-6 bg-white p-6 rounded shadow">
        @Html.AntiForgeryToken()

        @* <input type="hidden" name="UserId" value="@Model.UserId" /> *@

        <div>
            <label asp-for="NewPassword" class="block text-sm font-medium text-gray-700 mb-1">Parolă nouă</label>
            <input asp-for="NewPassword" type="password" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="NewPassword" class="text-red-500 text-sm"></span>
        </div>

        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirmă parola</label>
            <input asp-for="ConfirmPassword" type="password" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <div class="flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow">
                Salvează
            </button>
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded shadow">
                Anulează
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

