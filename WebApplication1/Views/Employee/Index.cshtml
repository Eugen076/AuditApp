@model IEnumerable<WebApplication1.Entities.UserAccount>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Warning"] != null)
{
    <div class="alert alert-warning">@TempData["Warning"]</div>
}

<h2>Lista angajaților</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Activ</th>
            <th>Acțiune</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.Email</td>
                <td>@user.UserName</td>
                <td>
                    @(user.LockoutEnabled && user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.Now ? "Inactiv" : "Activ")
                </td>
                <td>
                    @if (user.LockoutEnd.HasValue && user.LockoutEnd > DateTimeOffset.Now)
                    {
                        <form asp-action="ToggleActive" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm">Activează</button>
                        </form>
                    }
                    else
                    {
                        <form asp-action="ToggleActive" method="post">
                            <input type="hidden" name="id" value="@user.Id" />
                            <button type="submit" class="btn btn-outline-secondary btn-sm">Dezactivează</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
