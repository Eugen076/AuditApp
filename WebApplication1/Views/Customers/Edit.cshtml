@model WebApplication1.Models.CustomerEditViewModel

@{
    ViewData["Title"] = "Editare Client";
}
@if (!ViewData.ModelState.IsValid)
{
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-6">
        <h4 class="font-bold mb-2">Erori de validare (debug):</h4>
        <ul class="list-disc list-inside text-sm">
            @foreach (var entry in ViewData.ModelState)
            {
                foreach (var error in entry.Value.Errors)
                {
                    <li><strong>@entry.Key</strong>: @error.ErrorMessage</li>
                }
            }
        </ul>
    </div>
}


<div class="max-w-2xl mx-auto py-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Editare Client</h1>
  
    <form asp-action="Edit" class="space-y-6 bg-white p-6 rounded shadow">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        <input type="hidden" asp-for="Id" />

        <!-- FullName (readonly) -->
        <div>
            <label asp-for="FullName" class="block text-sm font-medium text-gray-700 mb-1">Nume complet</label>
            <input asp-for="FullName" readonly class="bg-gray-100 cursor-not-allowed w-full border border-gray-300 rounded px-3 py-2 focus:outline-none" />
        </div>

        <!-- Email (editable) -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Email" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <!-- Phone (editable) -->
        <div>
            <label asp-for="Phone" class="block text-sm font-medium text-gray-700 mb-1">Telefon</label>
            <input asp-for="Phone" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Phone" class="text-red-500 text-sm"></span>
        </div>

        <!-- Address (editable) -->
        <div>
            <label asp-for="Address" class="block text-sm font-medium text-gray-700 mb-1">Adresă</label>
            <input asp-for="Address" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Address" class="text-red-500 text-sm"></span>
        </div>

        <!-- IsActive -->
        <div class="flex items-center">
            <input asp-for="IsActive" type="checkbox" class="h-4 w-4 text-blue-600 border-gray-300 rounded focus:ring-blue-500" />
            <label asp-for="IsActive" class="ml-2 block text-sm text-gray-700">Activ</label>
        </div>

        <!-- DateOfBirth (readonly sau eliminat complet) -->
@*         <div>
            <label asp-for="DateOfBirth" class="block text-sm font-medium text-gray-700 mb-1">Data nașterii</label>
            <input asp-for="DateOfBirth" type="date" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="DateOfBirth" class="text-red-500 text-sm"></span>
        </div> *@

        <!-- Save button -->
        <div class="flex gap-4">
            <button type="submit" class="bg-blue-600 hover:bg-blue-700 text-white font-semibold px-6 py-2 rounded shadow">
                Salvează
            </button>
            <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded shadow">
                Înapoi la listă
            </a>
        </div>
    </form>

</div>
