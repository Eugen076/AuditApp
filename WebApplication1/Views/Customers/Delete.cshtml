@model WebApplication1.Entities.Customer

@{
    ViewData["Title"] = "Ștergere Client";
}

<div class="max-w-3xl mx-auto py-10">
    <h1 class="text-3xl font-bold text-red-600 mb-4">Confirmare Ștergere</h1>
    <h3 class="text-lg text-gray-700 mb-6">Ești sigur că dorești să ștergi acest client?</h3>

    <div class="bg-white p-6 rounded shadow border mb-6">
        <h4 class="text-xl font-semibold text-gray-800 mb-4">Date Client</h4>

        <dl class="grid grid-cols-1 sm:grid-cols-3 gap-x-4 gap-y-3 text-sm">
            <dt class="font-medium text-gray-500">Nume complet</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.FullName</dd>

@*             <dt class="font-medium text-gray-500">CNP</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.CNP</dd>

            <dt class="font-medium text-gray-500">Email</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.Email</dd>

            <dt class="font-medium text-gray-500">Telefon</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.Phone</dd>

            <dt class="font-medium text-gray-500">Adresă</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.Address</dd>

            <dt class="font-medium text-gray-500">Activ</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.IsActive</dd>

            <dt class="font-medium text-gray-500">Data nașterii</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.DateOfBirth.ToString("dd.MM.yyyy")</dd>


            <dt class="font-medium text-gray-500">Creat la</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.CreatedAt.ToString("dd.MM.yyyy HH:mm")</dd>

            <dt class="font-medium text-gray-500">Creat de</dt>
            <dd class="text-gray-800 sm:col-span-2">@Model.CreatedBy</dd> *@
        </dl>
    </div>

    <form asp-action="Delete" class="flex gap-4">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="bg-red-600 hover:bg-red-700 text-white font-semibold px-6 py-2 rounded shadow">
            Șterge
        </button>
        <a asp-action="Index" class="bg-gray-300 hover:bg-gray-400 text-gray-800 font-semibold px-6 py-2 rounded shadow">
            Înapoi la listă
        </a>
    </form>
</div>
