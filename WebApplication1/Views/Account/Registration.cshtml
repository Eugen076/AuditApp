@model WebApplication1.Models.RegistrationViewModel

@{
    ViewData["Title"] = "Registration";
}

<div class="max-w-xl mx-auto py-10">
    <h1 class="text-3xl font-bold text-gray-800 mb-6">Înregistrare Utilizator</h1>

    <form asp-action="Registration" class="space-y-6 bg-white p-6 rounded shadow">
        <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

        @if (ViewBag.Message != null)
        {
            <div class="text-green-600 font-semibold">@ViewBag.Message</div>
        }

        <!-- First Name -->
        <div>
            <label asp-for="FirstName" class="block text-sm font-medium text-gray-700 mb-1">Prenume</label>
            <input asp-for="FirstName" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="FirstName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Last Name -->
        <div>
            <label asp-for="LastName" class="block text-sm font-medium text-gray-700 mb-1">Nume</label>
            <input asp-for="LastName" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="LastName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Email -->
        <div>
            <label asp-for="Email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
            <input asp-for="Email" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Email" class="text-red-500 text-sm"></span>
        </div>

        <!-- Username -->
        <div>
            <label asp-for="UserName" class="block text-sm font-medium text-gray-700 mb-1">Username</label>
            <input asp-for="UserName" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>
        </div>

        <!-- Password -->
        <div>
            <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Parolă</label>
            <input asp-for="Password" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
        </div>

        <!-- Confirm Password -->
        <div>
            <label asp-for="ConfirmPassword" class="block text-sm font-medium text-gray-700 mb-1">Confirmă Parola</label>
            <input asp-for="ConfirmPassword" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
            <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>
        </div>

        <!-- Role -->
        <div>
            <label asp-for="Role" class="block text-sm font-medium text-gray-700 mb-1">Rol</label>
            <select asp-for="Role" asp-items="Model.Roles"
                    class="w-full border border-gray-300 rounded px-3 py-2 bg-white focus:outline-none focus:ring focus:border-blue-500">
                <option value="">Select role</option>
            </select>
            <span asp-validation-for="Role" class="text-red-500 text-sm"></span>
        </div>

        <!-- Submit -->
        <div>
            <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded shadow">
                Înregistrează
            </button>
        </div>
    </form>

    <div class="mt-6 text-center text-sm text-gray-600">
        Deja ai un cont? <a asp-action="Login" class="text-blue-600 hover:underline">Autentifică-te</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
