@model WebApplication1.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="bg-white shadow-lg rounded px-8 py-6 w-full max-w-md">
        <h2 class="text-2xl font-bold text-center text-gray-800 mb-6">Login</h2>

        <form asp-action="Login" method="post" class="space-y-5">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="UserNameorEmail" class="block text-sm font-medium text-gray-700 mb-1">Username or Email</label>
                <input asp-for="UserNameorEmail" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
                <span asp-validation-for="UserNameorEmail" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <label asp-for="Password" class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                <input asp-for="Password" type="password" class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring focus:border-blue-500" />
                <span asp-validation-for="Password" class="text-red-500 text-sm"></span>
            </div>

            <div>
                <button type="submit" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-2 px-4 rounded">
                    Login
                </button>
            </div>
            <div class="text-center mt-3">
                <a asp-action="ForgotPassword" asp-controller="Account"
                   class="text-sm text-blue-600 hover:underline">
                    Ai uitat parola?
                </a>
            </div>
        </form>


@*         <p class="mt-4 text-sm text-center text-gray-600">
            Don't have an account?
            <a asp-action="Registration" class="text-blue-600 hover:underline">Go to registration</a>
        </p> *@
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
