@model WebApplication1.Models.ForgotPasswordViewModel

<div class="min-h-screen flex items-center justify-center bg-gray-100">
    <div class="bg-white p-6 rounded shadow-md w-full max-w-md">
        <h2 class="text-2xl font-bold mb-4 text-center">Resetare Parolă</h2>

        <form asp-action="ForgotPassword" method="post" class="space-y-4">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm"></div>

            <div>
                <label asp-for="UserNameOrEmail" class="block text-sm font-medium text-gray-700">Email sau Username</label>
                <input asp-for="UserNameOrEmail" class="w-full border border-gray-300 rounded px-3 py-2" />
                <span asp-validation-for="UserNameOrEmail" class="text-red-500 text-sm"></span>
            </div>

            <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">
                Trimite link resetare
            </button>
            <div asp-validation-summary="All" class="text-red-500 text-sm mb-4"></div>

        </form>
    </div>
</div>
